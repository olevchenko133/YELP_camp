<%- include("../partials/header")%>


<h1 class="mx-auto text-center mt-5 mb-4">Create a new campground</h1>
<div class="form mx-auto"> 
<form action="/campgrounds" method="POST" >
    <div class="form-group"> <input  class="form-control"type="text" name="name" id="name" placeholder="name"></div>
<div class="form-group"><input  class="form-control" type="text" name="image" id="campImg" placeholder="image url"> </div>
<div class="form-group"><input  class="form-control" type="number" name="price" id="price" placeholder="price" min-value="1" step ="1"> </div>

<div class="form-group"><input  class="form-control"type="text" name="description" id="description" placeholder="description"> </div>
<div class="form-group"> <button class="btn btn-primary btn-block" type="submit">Submit</button></div>

<!-- <button type="button" class="btn btn-info">Submit</button> -->

</form>
<a href="/campgrounds" class="block mr-auto">Go back!</a>
</div>
