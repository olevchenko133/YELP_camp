
<%- include("../partials/header")%>


<h1 class="mx-auto text-center mt-5 mb-4">Edit a <%= campground.name%></h1>
<div class="form mx-auto"> 
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" >
    <div class="form-group"> <input  class="form-control"type="text" name="campground[name]" id="name" placeholder="name" value="<%=campground.name%>"></div>
<div class="form-group"><input  class="form-control"type="text" name="campground[image]" id="campImg" placeholder="image url" value="<%=campground.image%>"> </div>
<div class="form-group"><input  class="form-control" type="number" name="campground[price]" id="campground[price]" placeholder="price" value="<%=campground.price%>"> </div>

<div class="form-group"><input  class="form-control"type="text" name="campground[description]" id="description" placeholder="description" value="<%=campground.description%>"> </div>
<div class="form-group"> <button class="btn btn-primary btn-block" type="submit">Submit</button></div>

<!-- <button type="button" class="btn btn-info">Submit</button> -->

</form>
<a href="/campgrounds" class="block mr-auto">Go back!</a>
</div>
<%- include("../partials/footer")%>
